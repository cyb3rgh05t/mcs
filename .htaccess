# .htaccess - MCS Booking System Security & Rewriting

# Enable rewrite engine
RewriteEngine On

# ================================
# SECURITY HEADERS
# ================================

# Security headers for modern web security
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Prevent MIME type sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Enable XSS protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Content Security Policy (adjust as needed)
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://maps.googleapis.com https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://maps.googleapis.com; frame-src 'self'"
    
    # Remove server information
    Header always unset Server
    Header always unset X-Powered-By
    
    # HSTS (only enable on HTTPS)
    # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# ================================
# DIRECTORY PROTECTION
# ================================

# Protect sensitive directories
<FilesMatch "^(config|classes|logs|backups|database)/">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Protect configuration files
<Files "config.php">
    Order Deny,Allow
    Deny from all
</Files>

# Protect database files
<Files "*.db">
    Order Deny,Allow
    Deny from all
</Files>

<Files "*.sqlite">
    Order Deny,Allow
    Deny from all
</Files>

# Protect log files
<Files "*.log">
    Order Deny,Allow
    Deny from all
</Files>

# Protect backup files
<Files "backup_*">
    Order Deny,Allow
    Deny from all
</Files>

# Protect sensitive file types
<FilesMatch "\.(ini|conf|cfg|bak|old|tmp|temp|swp|~)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Protect version control and development files
<FilesMatch "\.(git|svn|env|htpasswd|htaccess)">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# ================================
# BLOCK MALICIOUS REQUESTS
# ================================

# Block common attack patterns
RewriteCond %{QUERY_STRING} (eval\(|base64_decode|gzip|<script|javascript:|onload=) [NC,OR]
RewriteCond %{QUERY_STRING} (file_get_contents|curl_exec|system\(|exec\() [NC,OR]
RewriteCond %{QUERY_STRING} (union.*select|select.*from|insert.*into|delete.*from) [NC,OR]
RewriteCond %{QUERY_STRING} (\.\./|\.\.\%2f|%2e%2e%2f) [NC,OR]
RewriteCond %{QUERY_STRING} (boot\.ini|etc/passwd|self/environ) [NC]
RewriteRule .* - [F,L]

# Block requests with suspicious user agents
RewriteCond %{HTTP_USER_AGENT} (libwww-perl|wget|python-requests|curl|Googlebot|bingbot|Slurp|DuckDuckBot|facebookexternalhit) [NC]
RewriteCond %{REQUEST_URI} !^/robots\.txt$ [NC]
RewriteCond %{REQUEST_URI} !^/sitemap\.xml$ [NC]
RewriteRule .* - [F,L]

# Block requests with no user agent
RewriteCond %{HTTP_USER_AGENT} ^$ [OR]
RewriteCond %{HTTP_USER_AGENT} ^-$
RewriteRule .* - [F,L]

# Block common bot/scanner patterns
RewriteCond %{HTTP_USER_AGENT} (nikto|sqlmap|fimap|nessus|openvas|morfeus|whatweb|Widow|Zollard|Arachni|vscan|Metis|ZmEu|Autoref) [NC]
RewriteRule .* - [F,L]

# Block suspicious requests by referrer
RewriteCond %{HTTP_REFERER} (viagra|cialis|casino|poker|adult|sex|porn) [NC]
RewriteRule .* - [F,L]

# ================================
# RATE LIMITING (Basic)
# ================================

# Limit request methods
RewriteCond %{REQUEST_METHOD} !^(GET|POST|HEAD|OPTIONS)$ [NC]
RewriteRule .* - [F,L]

# Block too long URLs (potential buffer overflow)
RewriteCond %{THE_REQUEST} \s[^\s]{2048,}\s [NC]
RewriteRule .* - [F,L]

# ================================
# URL REWRITING
# ================================

# Admin panel rewrite
RewriteRule ^admin/?$ admin/index.php [L]
RewriteRule ^admin/(.*)$ admin/index.php [L]

# API rewrite
RewriteRule ^api/([^/]+)/?$ api/$1.php [L]

# Pretty URLs for booking steps
RewriteRule ^booking/step/([1-6])/?$ index.php?step=$1 [L,QSA]
RewriteRule ^booking/?$ index.php [L,QSA]

# Static files - serve directly
RewriteRule ^(assets|images|css|js|fonts)/.*$ - [L]

# Handle missing files gracefully
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/(admin|api)/
RewriteRule ^(.*)$ index.php [L,QSA]

# ================================
# PERFORMANCE OPTIMIZATION
# ================================

# Enable compression
<IfModule mod_deflate.c>
    # Compress HTML, CSS, JavaScript, Text, XML and fonts
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/vnd.ms-fontobject
    AddOutputFilterByType DEFLATE application/x-font
    AddOutputFilterByType DEFLATE application/x-font-opentype
    AddOutputFilterByType DEFLATE application/x-font-otf
    AddOutputFilterByType DEFLATE application/x-font-truetype
    AddOutputFilterByType DEFLATE application/x-font-ttf
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE font/opentype
    AddOutputFilterByType DEFLATE font/otf
    AddOutputFilterByType DEFLATE font/ttf
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE image/x-icon
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml
    
    # Remove browser bugs (only needed for really old browsers)
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
    Header append Vary User-Agent
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Fonts
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType application/vnd.ms-fontobject "access plus 1 year"
    ExpiresByType application/x-font-ttf "access plus 1 year"
    ExpiresByType font/opentype "access plus 1 year"
    
    # Documents
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType application/x-shockwave-flash "access plus 1 month"
    
    # Data
    ExpiresByType text/xml "access plus 0 seconds"
    ExpiresByType application/xml "access plus 0 seconds"
    ExpiresByType application/json "access plus 0 seconds"
    
    # HTML (dynamic content)
    ExpiresByType text/html "access plus 0 seconds"
    
    # Manifest files
    ExpiresByType application/manifest+json "access plus 1 week"
    ExpiresByType text/cache-manifest "access plus 0 seconds"
</IfModule>

# Add cache headers
<IfModule mod_headers.c>
    # Cache static assets
    <FilesMatch "\.(ico|pdf|flv|jpg|jpeg|png|gif|webp|js|css|swf|svg|woff|woff2|eot|ttf|otf)$">
        Header set Cache-Control "max-age=2628000, public"
    </FilesMatch>
    
    # Cache HTML for a very short time
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "max-age=600, private, must-revalidate"
    </FilesMatch>
    
    # Don't cache dynamic content
    <FilesMatch "\.(php|cgi|pl|htm)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires 0
    </FilesMatch>
</IfModule>

# ================================
# FILE TYPE RESTRICTIONS
# ================================

# Only allow specific file types
<FilesMatch "\.(php|html|htm|css|js|jpg|jpeg|png|gif|webp|svg|ico|pdf|woff|woff2|eot|ttf|otf|json|xml|txt)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Block executable files
<FilesMatch "\.(exe|bat|cmd|com|scr|pif|vbs|ws|reg|msi)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# ================================
# PHP SECURITY SETTINGS
# ================================

# Disable PHP execution in uploads directory (if you have one)
<Files "*.php">
    <IfModule mod_php.c>
        php_flag engine off
    </IfModule>
    <IfModule mod_php7.c>
        php_flag engine off
    </IfModule>
    <IfModule mod_php8.c>
        php_flag engine off
    </IfModule>
</Files>

# Re-enable PHP in main directories
<Directory ~ "^(.*/)?(admin|api)/?$">
    <Files "*.php">
        <IfModule mod_php.c>
            php_flag engine on
        </IfModule>
        <IfModule mod_php7.c>
            php_flag engine on
        </IfModule>
        <IfModule mod_php8.c>
            php_flag engine on
        </IfModule>
    </Files>
</Directory>

# ================================
# ERROR PAGES
# ================================

# Custom error pages (create these files in your document root)
ErrorDocument 400 /error.php?code=400
ErrorDocument 401 /error.php?code=401
ErrorDocument 403 /error.php?code=403
ErrorDocument 404 /error.php?code=404
ErrorDocument 500 /error.php?code=500

# ================================
# MISCELLANEOUS SECURITY
# ================================

# Disable server signature
ServerSignature Off

# Disable directory browsing
Options -Indexes

# Disable following symbolic links
Options -FollowSymLinks

# Disable multiviews
Options -MultiViews

# Prevent access to sensitive files
<FilesMatch "(^#.*#|\.(bak|config|dist|fla|inc|ini|log|psd|sh|sql|sw[op])|~)$">
    Order deny,allow
    Deny from all
    Satisfy All
</FilesMatch>

# ================================
# ADDITIONAL SECURITY MEASURES
# ================================

# Block WordPress/CMS scanning attempts
RewriteCond %{REQUEST_URI} (wp-admin|wp-login|wp-config|xmlrpc|wp-content) [NC]
RewriteRule .* - [F,L]

# Block common vulnerability scans
RewriteCond %{REQUEST_URI} (phpmyadmin|phpinfo|test\.php|info\.php|admin\.php) [NC]
RewriteRule .* - [F,L]

# Block access to common config files
RewriteCond %{REQUEST_URI} (\.env|composer\.json|package\.json|yarn\.lock|gulpfile|webpack) [NC]
RewriteRule .* - [F,L]

# End of .htaccess